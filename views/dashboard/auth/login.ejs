  function checkCredentials() {
    var email = $("#email").val();
    var password = $("#password").val();
    var recaptcha = $("#g-recaptcha-response").val();
    if (!email && !password) {
      $(".email_error_div").html("Please enter email");
      $(".password_error_div").html("Please enter password");
    } else if (!email) {
      $(".password_error_div").html("");
      $(".email_error_div").html("Please enter email");
    } else if (!password) {
      $(".email_error_div").html("");
      $(".password_error_div").html("Please enter password");
    }
    // else if(!recaptcha){
    //   event.preventDefault();
    //   $("#captcha_error").html("Please select recaptcha");
    // }
    else {
      $(".email_error_div").html("");
      $(".password_error_div").html("");
      $("#captcha_error").html("");

      $.ajax({
        url: "/admin/login",
        method: "POST",
        data: { email: email, password: password },
        beforeSend: function (msg) {
          blockUI(".card");
        },
        success: (data) => {
          unblockUI(".card");
          if (data == 1) {
            // iziToast.success({

            //   position: 'topRight',
            //   message: "gfdgdfgdfgdfgdfgdfg",
            // });
            window.location.href = "/admin/dashboard";
          } else {
            iziToast.error({

              position: 'topRight',
              message: data,
            });
          }
        }
      })
    }
  }

