<% if(msg !='' ) { %>
<div class="alert alert-success msg" style="position: absolute; z-index: 9999; color:white; background-color: #195780; right: 10px; top: 10px;">
  <span style="font-size: 16px;">
    <%= msg %>
  </span>
</div>
<% } %>
<section class="section">
  <div class="section-header">
    <h1>Profile</h1>
    <div class="section-header-breadcrumb">
      <div class="breadcrumb-item active"><a href="/dashboard">Dashboard</a></div>
    </div>
  </div>
  <div class="section-body">
    <form action="/UpdateProfile" method="post" id="myForm" enctype="multipart/form-data">
      <div class="form-group row mb-4 align-items-center">
        <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
        <div class="col-sm-12 col-md-7 text-center">
          <img id="blah" alt="profileImage" src="/images/<%= data?.profileImage%>" class="rounded-circle profile-widget-picture" width="100px" height="100px" alt="center">
        </div>
      </div>
      <div class="form-group row mb-4">
        <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Name</label>
        <div class="col-sm-12 col-md-7">
          <input type="text" name="name" value="<%= data.name%>" class="form-control" required>
        </div>
      </div>
      <div class="form-group row mb-4">
        <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Phone</label>
        <div class="col-sm-12 col-md-7">
          <input type="number" name="phoneNumber" value="<%= data.phoneNumber%>" id="phoneNumber" class="form-control" disabled>
        </div>
      </div>
      <div class="form-group row mb-4">
        <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3" >Email</label>
        <div class="col-sm-12 col-md-7">
          <input type="email" name="email" value="<%= data.email%>" class="form-control" required>
        </div>
      </div>
      <div class="form-group row mb-4">
        <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Upload Image</label>
        <div class="col-sm-12 col-md-7">
            <input type="file" name="profileImage" value="" id="imgInp" class="form-control">
        </div>
    </div>
      
      <div class="form-group row mb-4">
        <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
        <div class="col-sm-12 col-md-7">
          <button class="btn btn-primary">Submit</button>
        </div>
      </div>
  </div>
  </form>
  </div>
</section>
<script>
  imgInp.onchange = (evt) => {
    const [file] = imgInp.files;
    if (file) {
      blah.src = URL.createObjectURL(file);
    }
  };
</script>