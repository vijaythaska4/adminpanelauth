
<% if(msg !='' ) { %>
  <div class="alert alert-success msg" style="position: absolute; z-index: 9999; color:white; background-color: #195780; right: 10px; top: 10px;">
    <span style="font-size: 16px;">
      <%= msg %>
    </span>
  </div>
  <% } %>
 <section class="section">
    <div class="section-header">
      <h1>Interests</h1>
      <div class="section-header-breadcrumb">
        <!-- <div class="breadcrumb-item">Table</div> -->
      </div>
    </div>
    <a class="btn btn-primary text-white " href="/addInterest"> <i class="fas fa-plus me-2"></i>Add Interest</a>
    <div class="card">
      <div class="card-body py-4 px-0 table-responsive">

        <table id="myTable" class="table table-bordered">
          <thead>
            <tr>
              <th scope="col">Sr No</th>
              <th scope="col">Name</th>
              <th scope="col">Image</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% data.forEach((result,i)=>{%>
              <tr>
                <td><%= i+1%></td>
                <td><%= result.name%></td>

                <td>
                  <img class="m-2 rounded" src="/images/<%= result?.image%>" height="50px" width="50" alt="" />
                </td>

                <td>

                  <a class="btn btn-info text-white" href="/viewInterest/<%= result._id%>"><i class="fas fa-eye"></i></a>
                  <a class="btn btn-warning text-white" href="/editInterest/<%= result._id%>">
                    <i class="fas fa-edit"></i></a>
                  <button class="btn btn-danger" onclick="deletuser('<%= result._id%>')">
                    <i class="fas fa-trash"></i>
                  </button>
                </td>
              </tr>
              <%})%>
          </tbody>
        </table>
      </div>
    </div>
    </div>
    </div>
  </section>


<script>
  function deletuser(id) {
    // console.log(id);
    // alert(id);
    swal({
      title: "Are you sure?",
      text: "You won't be able to revert this!",
      icon: "warning",
      buttons: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      buttons: ["Cancel", "Yes Delete it!"],
    }).then((result) => {
      if (result == true && id != "") {
        $.ajax({
          url: "/deleteInterest",
          type: "post",
          data: {
            id: id
          },

          success: function (result) {
            if (result) {
              window.location.reload(true);
            }
          },
        });
      }
    });
  }
</script>